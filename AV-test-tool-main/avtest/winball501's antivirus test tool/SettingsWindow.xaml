<Window x:Class="winball501_s_antivirus_test_tool.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:winball501_s_antivirus_test_tool"
        mc:Ignorable="d"
        Title="Settings" Height="600" Width="800"
        Background="#F5F3EE" 
        FontFamily="Segoe UI"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources> 
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI Semibold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#5B6F82" Offset="0"/>
                        <GradientStop Color="#556B7A" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#4A5F6D"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="22"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Border.Effect>
                                <DropShadowEffect Color="#3A4F5D" Opacity="0.3" BlurRadius="8" ShadowDepth="2"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#6B8090" Offset="0"/>
                                <GradientStop Color="#657B8A" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#4B5F6D" Offset="0"/>
                                <GradientStop Color="#455B6A" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
 
        <Style x:Key="SaveButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#8FA77A" Offset="0"/>
                        <GradientStop Color="#7E9470" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Width" Value="150"/>
            <Setter Property="BorderBrush" Value="#6E8560"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#9FB78A" Offset="0"/>
                                <GradientStop Color="#8EA480" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#7E9470" Offset="0"/>
                                <GradientStop Color="#6E8460" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
 
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="#FAFAF8"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="BorderBrush" Value="#D8D5CC"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#C8C5BC" Opacity="0.25" BlurRadius="20" ShadowDepth="4"/>
                </Setter.Value>
            </Setter>
        </Style>
 
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#3D3D3D"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
 
        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="#3D3D3D"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
 
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#3D3D3D"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
 
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#3D3D3D"/>
            <Setter Property="BorderBrush" Value="#D8D5CC"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                         Padding="{TemplateBinding Padding}"
                                         VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#8FA77A"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled" Margin="0,0,0,-6">
        <Grid Margin="30" Height="666">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

       
 
            <Border Grid.Row="1" Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="ðŸ“ Output Settings" 
                              FontWeight="SemiBold" 
                              FontSize="18"
                              Foreground="#5A5A5A"
                              Margin="0,0,0,15"/>

                    <RadioButton Name="noLogRadio" 
                                Content="Don't log anything" 
                                IsChecked="True"/>
                    <RadioButton Name="executedOnlyRadio" 
                                Content="Log only executed files"/>
                    <RadioButton Name="notExecutedOnlyRadio" 
                                Content="Log only not executed files"/>
                    <RadioButton Name="allFilesRadio" 
                                Content="Log executed and not executed files"/>
                </StackPanel>
            </Border>
 
            <Border Grid.Row="2" Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="â±ï¸ Execution Delay" 
                              FontWeight="SemiBold" 
                              FontSize="18"
                              Foreground="#5A5A5A"
                              Margin="0,0,0,15"/>

                    <TextBlock Text="Wait time after opening each file (milliseconds):" 
                              Margin="0,0,0,10"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Name="delayTextBox"
         Grid.Column="0"
         Width="150"
         Height="50"
         Text="0"
         VerticalAlignment="Center"
         VerticalContentAlignment="Center"
         HorizontalContentAlignment="Center"
         PreviewTextInput="DelayTextBox_PreviewTextInput"
         DataObject.Pasting="DelayTextBox_Pasting"
         TextChanged="delayTextBox_TextChanged" />


                        <TextBlock Grid.Column="1" 
                                  Text="ms (1000 ms = 1 second)"
                                  VerticalAlignment="Center"
                                  Margin="15,0,0,0"
                                  Foreground="#8B8B8B"
                                  
                                  FontSize="12"/>
                    </Grid>
                </StackPanel>
            </Border>
 
            <Border Grid.Row="3" Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="ðŸ’¾ Session Persistence" 
                              FontWeight="SemiBold" 
                              FontSize="18"
                              Foreground="#5A5A5A"
                              Margin="0,0,0,15"/>

                    <CheckBox Name="saveStatusCheckBox" 
                             Content="Continue from where you left off when program is reopened (for the same folder)"/>
                </StackPanel>
            </Border>

           
            <StackPanel Grid.Row="0" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Right"
                       Margin="0,15,0,0">
                <Button Content="ðŸ’¾ Save Settings" 
                       x:Name="saveButton" 
                       Style="{StaticResource SaveButton}"
                       Click="SaveButton_Click"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
