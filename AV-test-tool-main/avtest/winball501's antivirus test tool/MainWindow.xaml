<Window x:Class="winball501_s_antivirus_test_tool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Antivirus Test Tool Version 1.4 by Winball501"
        Width="1082"
        Height="465"
        MinWidth="600"
        MinHeight="400"
        Background="#F6F5F2"
        FontFamily="Segoe UI"
        WindowStartupLocation="CenterScreen"

        ResizeMode="CanResizeWithGrip"
        WindowStyle="SingleBorderWindow"
        AllowsTransparency="False">

    <Window.Resources>
        <Color x:Key="PrimaryColor">#7FA77A</Color>
        <Color x:Key="AccentColor">#5B6F82</Color>
        <Color x:Key="WarnColor">#C87A65</Color>
        <Color x:Key="CardBg">#FFFFFF</Color>
        <Color x:Key="Surface">#F6F5F2</Color>
        <Color x:Key="MutedText">#6E6E6E</Color>

        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="WarnBrush" Color="{StaticResource WarnColor}"/>
        <SolidColorBrush x:Key="CardBrush" Color="{StaticResource CardBg}"/>
        <SolidColorBrush x:Key="MutedBrush" Color="{StaticResource MutedText}"/>

        <DropShadowEffect x:Key="CardShadow" Color="#000000" Opacity="0.09" BlurRadius="10" ShadowDepth="2"/>

        <Style TargetType="TextBlock" x:Key="BodyText">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="LabelSmall">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource MutedBrush}"/>
        </Style>

        <Style x:Key="InfoCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="14"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="BorderBrush" Value="#E7E4DE"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
        </Style>

        <Style x:Key="FlatButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="Margin" Value="6,6,6,6"/>
            <Setter Property="Background" Value="#F0EFED"/>
            <Setter Property="Foreground" Value="#2F3A3A"/>
            <Setter Property="BorderBrush" Value="#D6D2CA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#ECEBE9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#E6E5E3"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryAction" TargetType="Button" BasedOn="{StaticResource FlatButton}">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#6E855F"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.95"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="IconButton" TargetType="Button" BasedOn="{StaticResource FlatButton}">
            <Setter Property="Width" Value="38"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>

        <Style x:Key="CardValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="CardValueWarn" TargetType="TextBlock" BasedOn="{StaticResource CardValue}">
            <Setter Property="Foreground" Value="{StaticResource WarnBrush}"/>
        </Style>

        <Style TargetType="ProgressBar" x:Key="LargeProgress">
            <Setter Property="Height" Value="12"/>
            <Setter Property="MinWidth" Value="220"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Background" Value="#EFEDEA"/>
        </Style>
    </Window.Resources>

    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="4"/>

        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Disabled" Margin="0,0,0,10">
            <WrapPanel x:Name="StatsPanel" Orientation="Horizontal" Margin="0,0,0,0" ItemHeight="150">
                <Border Style="{StaticResource InfoCard}" Width="320" MinWidth="230" Height="117">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Progress" Style="{StaticResource LabelSmall}"/>
                        <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="0,8,0,0">
                            <ProgressBar Style="{StaticResource LargeProgress}" Name="progressBar" Value="0" Maximum="100"/>
                            <TextBlock x:Name="percentageText" Text="0%" Style="{StaticResource CardValue}" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Style="{StaticResource InfoCard}" Width="320" MinWidth="240" Height="114">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Executed Successfully" Style="{StaticResource LabelSmall}"/>
                        <TextBlock Name="filesExecutedLabel" Text="0 / 0" Style="{StaticResource CardValue}" Foreground="{StaticResource PrimaryBrush}" Margin="0,12,0,0"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource InfoCard}" Width="320" MinWidth="240" Height="115">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Potentially Blocked" Style="{StaticResource LabelSmall}"/>
                        <TextBlock Name="accessDeniedLabel" Text="0" Style="{StaticResource CardValueWarn}" Margin="0,12,0,0"/>
                    </StackPanel>
                </Border>
            </WrapPanel>
        </ScrollViewer>

        <Border Grid.Row="2" Style="{StaticResource InfoCard}">
            <DockPanel x:Name="ButtonsPanel" LastChildFill="False" VerticalAlignment="Center">
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Style="{StaticResource FlatButton}" MinWidth="110" Click="AddPathButton_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Add Path"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="makeExecutableButton" Style="{StaticResource FlatButton}" MinWidth="140" Click="MakeExecutableButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Make Executable"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource FlatButton}" MinWidth="100" Click="ResetButton_Click">Reset</Button>
                    <Button Style="{StaticResource FlatButton}" MinWidth="110" Click="ClearListButton_Click">Clear List</Button>
                </StackPanel>

                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal" Margin="12,0" VerticalAlignment="Center">
                    <CheckBox x:Name="slowModeCheckBox" IsChecked="True" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <TextBlock Text="ðŸŒ Enable Slow Execution Mode" VerticalAlignment="Center" Foreground="{StaticResource MutedBrush}"/>
                </StackPanel>

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="startExecuteButton" Style="{StaticResource PrimaryAction}" MinWidth="150" Click="StartExecuteButton_Click">Start Execute</Button>
                    <Button Style="{StaticResource IconButton}" Click="SettingsClick" Margin="6,0,0,0" ToolTip="Settings">
                        <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>

        <Border Grid.Row="3" Style="{StaticResource InfoCard}" Margin="0,10,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock Text="File List" FontSize="15" FontWeight="SemiBold"/>
                        <TextBlock x:Name="directoryLabel" Text="No directory selected" Style="{StaticResource LabelSmall}"/>
                    </StackPanel>
                </StackPanel>
                <ListBox x:Name="fileListBox" Grid.Row="1" Padding="8" BorderBrush="#E7E4DE" BorderThickness="1"/>
            </Grid>
        </Border>
    </Grid>
</Window>
